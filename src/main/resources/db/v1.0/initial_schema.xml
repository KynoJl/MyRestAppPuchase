<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create_tables_person" author="Popov_Nikita">
        <createTable tableName="person">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(250)"/>
            <column name="last_name" type="VARCHAR(250)"/>
            <column name="age" type="integer"/>
        </createTable>
<!--        <addAutoIncrement tableName="person" columnName="id" columnDataType="bigint" startWith="1" incrementBy="1"/>-->
    </changeSet>

        <changeSet id="create_tables_information" author="Popov_Nikita">
            <createTable tableName="information">
                <column name="id" type="bigint">
                    <constraints primaryKey="true" primaryKeyName="information_id_pk"/>
                </column>
                <column name="name" type="varchar(100)"/>
                <column name="last_name" type="varchar(100)"/>
                <column name="age" type="integer"/>
                <column name="count" type="bigint"/>
                <column name="amount" type="double"/>
                <column name="purchase_date" type="varchar(100)"/>
                <column name="purchase" type="varchar">
                </column>
            </createTable>
        </changeSet>

    <changeSet id="create_tables_purchase" author="Popov_Nikita">
        <createTable tableName="purchase">
            <column name="id" type="bigint">
                <constraints primaryKey="true" primaryKeyName="purchase_id_pk"/>
            </column>
            <column name="NAME" type="varchar"/>
            <column name="INFORMATION_ID" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="FK_purchase_ON_INFORMATION_ID"
                             referencedTableName="INFORMATION"
                             referencedColumnNames="ID"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="create_sequence" author="Popov_Nikita">
        <createSequence sequenceName="hibernate_sequence" incrementBy="1" startValue="1"/>
    </changeSet>

</databaseChangeLog>
